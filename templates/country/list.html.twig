{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="section no-pad-bot">
            <div class="row center">
                 <h5>
                     Countries
                 </h5>
            </div>
            <div class="row">
                <div class="col s6 offset-s3">
                    <a href="{{ path('country_add') }}" class="btn-floating waves-effect waves-light right">
                        <i class="material-icons">add</i>
                    </a>
                </div>
            </div>
            <div class="row">
                {% if not country_list %}
                    <div class="col s12 center">
                        <h6>No countries available</h6>
                    </div>
                {% else %}
                    <div class="col s6 offset-s3">
                        <ul class="collection with-header">
                            {% for country in country_list %}
                                <li class="collection-item">
                                    <div>
                                        {{ country.name }}
                                        <a href="{{ path('country_delete', {'id': country.id}) }}" class="secondary-content">
                                            <i class="material-icons">delete_forever</i>
                                        </a>
                                        <a href="{{ path('country_edit', {'id': country.id}) }}" class="secondary-content">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock content %}