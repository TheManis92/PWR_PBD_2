{% extends 'base.html.twig' %}

{% block content %}

    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.title, {'attr': {'value': movie.title}}) }}
        {{ form_row(form.year, {'attr': {'value': movie.year}}) }}
        {{ form_row(form.plot, {'attr': {'value': movie.plot}, 'data': movie.plot}) }}
        {{ form_row(form.genres) }}
        {{ form_row(form.lang, {'attr': {'value': movie.lang}}) }}
        {{ form_row(form.director, {'attr': {'value': movie.director}}) }}
        <div>
            <button id="btn" class="btn btn-lg btn-primary" type="submit">Edit movie</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock content %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('assets/js/select.min.js') }}"></script>
{% endblock js %}