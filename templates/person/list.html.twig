{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="section no-pad-bot">
            <div class="row center">
                 <h5>
                     People
                 </h5>
            </div>
            <div class="row">
                <div class="col s4 offset-s4">
                    <a href="{{ path('person_new') }}" class="btn-floating waves-effect waves-light right">
                        <i class="material-icons">add</i>
                    </a>
                </div>
            </div>
            <div class="row">
                {% if not person_list %}
                    <div class="col s12 center">
                        <h6>No people available</h6>
                    </div>
                {% else %}
                    <div class="col s4 offset-s4">
                        <ul class="collection">
                            {% for person in person_list %}
                                <li class="collection-item">
                                    <div>
                                        {{ person.name }} {{ person.surname }}
                                        <a href="{{ path('person_delete', {'id': person.id}) }}" class="secondary-content">
                                            <i class="material-icons">delete_forever</i>
                                        </a>
                                        <a href="{{ path('person_update', {'id': person.id}) }}" class="secondary-content">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock content %}