{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            {{ form_start(form, { 'attr': { 'class': 'col s12' } }) }}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="row">
                <div class="col s12">
                    <h3 class="center white-text text-lighten-1">Please register in</h3>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8 offset-s2">
                    {{ form_label(form.name) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'class': 'validate'} }) }}
                    {{ form_help(form.name) }}
                </div>
                <div class="input-field col s8 offset-s2">
                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'validate'} }) }}
                    {{ form_help(form.email) }}
                </div>
                {% for passField in form.password %}
                    <div class="input-field col s8 offset-s2">
                        {{ form_label(passField) }}
                        {{ form_errors(passField) }}
                        {{ form_widget(passField, { 'attr': {'class': 'validate'} }) }}
                        {{ form_help(passField) }}
                    </div>
                {% endfor %}
                <div class="row">
                    <div class="col s8 offset-s2">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Register
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
        </div>
    </div>

{%  endblock content %}