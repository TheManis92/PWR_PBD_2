{% extends 'base.html.twig' %}

{% block content %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="container">
        <div class="row">
            <form class="col s12" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="row">
                    <div class="col s12">
                        <h1 class="h3 center mb-3 font-weight-normal">Please sign in</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s8 offset-s2">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control validate" required autofocus>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s8 offset-s2">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control validate" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col s8 offset-s2">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Sign in
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col s8 offset-s2">
                <a href="{{ path('registration') }}">Not registered yet? Sign up!</a>
            </div>
        </div>
    </div>


{% endblock content %}